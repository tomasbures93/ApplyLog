@model List<Bewerbung>
@if(Model.Count() == 0)
{
	<p>No Companies found!</p>
} else
{
	<table class="table table-bordered">
		@foreach(var company in Model)
		{
			<tr>
				<td><a asp-action="View" asp-controller="Application" asp-route-id="@company.id">@company.firma.CompanyName</a></td>
				<td>@company.position</td>
				<td>@company.result</td>
			</tr>
		}
	</table>
}
