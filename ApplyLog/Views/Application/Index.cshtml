@model List<Bewerbung>
@{
    ViewData["Title"] = "Index JobApplication";
}

<h1>Application</h1>
<p><a asp-controller="Application" asp-action="Create">Add JobApplication</a></p>
<hr />
@if(Model.Count() == 0){
    <p>You haven't submitted any applications yet.</p>
} else {
    <input type="search" id="search" class="form-control m-tb" placeholder="Search" />
    <p>You’ve applied to @Model.Count jobs!</p>
    <table class="table">
        <tr>
            <th>Firma</th>
            <th>Position</th>
            <th>Datum</th>
            <th class="text-end">Options</th>
        </tr>
        @foreach (var t in @Model)
        {
            <tr>
                <td>@t.firma.CompanyName</td>
                <td>@t.position</td>
                <td>@t.whenapplied.ToString("dd.MM.yyyy")</td>
                <td class="text-end">
                    <a asp-controller="Application" asp-action="View" asp-route-id="@t.id">View</a> | 
                    <a asp-controller="Application" asp-action="Edit" asp-route-id="@t.id">Edit</a> | 
                    <a asp-controller="Application" asp-action="Delete" asp-route-id="@t.id">Delete</a>
                </td>
            </tr>

        }
    </table>
}

