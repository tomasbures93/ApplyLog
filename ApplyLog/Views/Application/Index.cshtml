@model List<Bewerbung>
@{
    ViewData["Title"] = "Index";
}

<h1>Application</h1>
<p><a class="nav-link text-dark" asp-area="" asp-controller="Application" asp-action="Create">Add JobApplication</a></p>
<hr />
@if(Model.Count() == 0){
    <p>You havent applied to any Jobs yet</p>
} else {
    <input type="search" id="search" class="form-control m-tb" placeholder="Search" />
    <p>You applied to @Model.Count Jobs!</p>
    <table class="table">
        <tr>
            <th>Firma</th>
            <th>Position</th>
            <th>Datum</th>
            <th class="text-end">Options</th>
        </tr>
        @foreach (var t in @Model)
        {
            <tr>
                <td>@t.firma.CompanyName</td>
                <td>@t.position</td>
                <td>@t.whenapplied.ToString("dd.MM.yyyy")</td>
                <td class="text-end">
                    <a class="btn btn-primary" asp-area="" asp-controller="Application" asp-action="View" asp-route-id="">View</a>
                    <a class="btn btn-primary" asp-area="" asp-controller="Application" asp-action="Edit" asp-route-id="">Edit</a>
                    <a class="btn btn-danger" asp-area="" asp-controller="Application" asp-action="Delete" asp-route-id="">Delete</a>
                </td>
            </tr>

        }
    </table>
}

