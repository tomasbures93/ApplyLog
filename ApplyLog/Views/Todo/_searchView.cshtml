@model List<TODO>
@if(Model.Count() == 0)
{
	<p>No TODOs found</p>
} else
{
	<table class="table table-bordered">
		@foreach (var item in Model)
		{
			<tr>
				<td><a asp-controller="Todo" asp-action="View" asp-route-id="@item.ID">@item.Titel</a></td>
				<td>@item.PriorityLevel</td>
				<td>@item.Deadline</td>
			</tr>
		}
	</table>
}

