@model dynamic
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to ApplyLog</h1>
    <input type="search" id="search" class="form-control m-tb" placeholder="Search" />
    <table class="table table-bordered">
        <tr>
            <th>Applications: @Model.application.Count</th>
            <th>TODOs: @Model.todo.Count</th>
        </tr>
        <tr>
            <td>
                @if (Model.application.Count == 0)
                {
                    <p>No Applications!</p>
                }
                else
                {
                    <table class="table">
                        @foreach (var app in Model.application)
                        {
                            <tr>
                                <td>@app.Titel</td>
                                <td>
                                    VIEW / EDIT
                                </td>
                            </tr>
                        }
                    </table>
                }
            </td>
            <td>
                @if (Model.todo.Count == 0)
                {
                    <p>No TODOs!</p>
                }
                else
                {
                    <table class="table">
                        @foreach (var todo in Model.todo)
                        {
                            <tr>
                                <td>@todo.Titel</td>
                                <td>
                                    <a class="btn btn-warning" asp-area="" asp-controller="Todo" asp-action="View" asp-route-id="@todo.ID">View</a>
                                    <a class="btn btn-primary" asp-area="" asp-controller="Todo" asp-action="Edit" asp-route-id="@todo.ID">Edit</a>
                                </td>
                            </tr>
                        }
                    </table>
                }
            </td>
        </tr>
    </table>
</div>
